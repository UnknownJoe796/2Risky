<controls:Grid
    x:Class="CS3450.TooRisky.Views.PlayerView"
    x:Name="Root" 
    xmlns:controls="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Height="48" 
    Width="120">
    <controls:Grid.Background>
        <controls:SolidColorBrush Color="#00E6E6E6"/>
    </controls:Grid.Background>
    <controls:Ellipse x:Name="PlayerCircle" Fill="#000000" HorizontalAlignment="Left" Height="30
                      " Margin="5,2,0,0" VerticalAlignment="Top" Width="30
                      " Stroke="#00000000" StrokeThickness="0"/>
    <controls:SymbolIcon x:Name="PlayerIcon" Symbol="Contact" Height="30" Width="30" Margin="5,2,0,18" HorizontalAlignment="Left">
        <controls:SymbolIcon.Foreground>
            <controls:SolidColorBrush Color="{controls:ThemeResource SystemAltMediumColor}"/>
        </controls:SymbolIcon.Foreground>
    </controls:SymbolIcon>

    <controls:TextBlock x:Name="PlayerNumberLabel" TextAlignment="Center" Foreground="Black" TextWrapping="Wrap" Text="Px" Margin="5,29,0,0" Width="30" HorizontalAlignment="Left"/>
    <controls:TextBlock x:Name="PlayerName" TextWrapping="Wrap" Text="Player" Height="20" Margin="40,5,0,22" HorizontalAlignment="Left"/>
    <controls:TextBlock x:Name="PlayerUnits" HorizontalAlignment="Left" Margin="40,29,0,0" TextWrapping="Wrap" Text="Units: 0" VerticalAlignment="Top"/>


</controls:Grid>